@model SpotiWiFi.Application.Streaming.Dto.AlbumDto;

@{
    Guid id = ViewBag.Id;
}

<form method="post" asp-controller="Banda" asp-action="SalvarAlbum">
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Nome</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Nome, new { @class = "form-control" }) 
        </div>
        @Html.HiddenFor(x => x.Id)
        @Html.Hidden("Id", (Guid)ViewBag.Id)
    </div>

    <button type="submit" class="btn btn-primary">Criar</button>
</form>