@model IEnumerable<SpotiWiFi.Application.Streaming.Dto.AlbumDto>

<div>
    <a class="btn btn-primary" role="button" asp-controller="Banda" asp-action="Criar Album">Criar Album</a>
</div>

<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <td>Id</td>
                <td>Nome</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                </tr>
            }
        </tbody>
    </table>
</div>