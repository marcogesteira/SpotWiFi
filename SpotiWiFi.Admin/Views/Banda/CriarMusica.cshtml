@using SpotiWiFi.Domain.Streaming.ValueObjects
@model SpotiWiFi.Application.Streaming.Dto.MusicaDto;

@{
    Guid id = ViewBag.Id;
    Guid idAlbum = ViewBag.AlbumId;
}

<form method="post" asp-controller="Banda" asp-action="SalvarMusica">
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Nome</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Nome, new { @class = "form-control" })
        </div>
        <label class="col-sm-2 col-form-label">Duração</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Duracao, new { @class = "form-control" })
        </div>
        @Html.HiddenFor(x => x.Id)
        @Html.Hidden("Id", (Guid)ViewBag.Id)
        @Html.HiddenFor(x => x.AlbumId)
        @Html.Hidden("IdAlbum", (Guid)ViewBag.AlbumId)
    </div>

    <button type="submit" class="btn btn-primary">Criar</button>
</form>