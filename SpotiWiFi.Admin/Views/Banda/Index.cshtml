@model IEnumerable<SpotiWiFi.Application.Streaming.Dto.BandaDto>

<div>
    <a class="btn btn-primary" role="button" asp-controller="Banda" asp-action="Criar">Criar Banda</a>
</div>

<div>
    <a class="btn btn-primary" role="button" asp-controller="Banda" asp-action="BandaReport" style="margin-top: 10px">Relatório de Bandas</a>
</div>

<div>
    <table class="table table-hover" style="margin-top: 10px">
        <thead>
            <tr>
                <td>Id</td>
                <td>Nome</td>
                <td>Descrição</td>
                <td>Backdrop</td>
                <td>Ações</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                

                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.Descricao</td>
                    <td>@item.Backdrop</td>
                    <td><a href="@Url.Action("Albuns","Banda",new { id = item.Id.ToString() })" class="btn btn-primary">Albuns</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>